﻿


@model IEnumerable<YourNamespace.Models.Product>

@{
    Layout = "_AdminLayout";
}

<h2>Products</h2>

<a asp-action="AddProduct" asp-controller="Product" class="btn btn-primary">Add More</a>

@if(Model?.Count()>0)
{
    <table class="table table-striped my-2">
        <tr>
            <th>Image</th>
            <th>Product</th>
            <th>Description</th>

            
            <th>Category</th>
            <th>Price</th>
            <th>Action</th>
        </tr>

        @foreach (var product in Model)
        {
            <tr>
                <td>
                   
                    <img src="~/Images/@product.Image" style="width:80px;height:100px" alt="product image" asp-append-version="true" />

                </td>
                <td>@product.Name</td>
                
                <td>@product.Category.Name</td>
                <td>@product.Price</td>
                <td>
                    <a asp-action="UpdateProduct" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-success">Edit</a>
                    <a asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-danger" onclick="return window.confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3>No records</h3>
}